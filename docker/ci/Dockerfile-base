FROM ubuntu:16.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update -qq && apt-get install -yqq \
    build-essential \
    cmake \
    g++ \
    wget \
    python
    
RUN apt-get update -qq && apt-get install -yqq \
    clang-3.9 lldb-3.9

RUN apt-get update -qq && apt-get install -yqq \
    qt5-default \
    valgrind \
    xorg xvfb xauth xfonts-100dpi xfonts-75dpi xfonts-scalable xfonts-cyrillic